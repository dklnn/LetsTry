<%= form_with model: post do |f| %>
    <div>
        <%= f.label :title %><br/>
        <%= f.text_area :title %>
    </div><br/>
    <div>
        <%= f.label :body %><br/>
        <%= f.text_area :body %>
    </div><br/>
    <div>
        <%= f.file_field :image %>
    </div><br/>
    <%= f.submit %>
<% end %>