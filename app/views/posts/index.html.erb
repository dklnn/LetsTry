<h1>All the posts: </h1>
<%= link_to 'New post', new_post_path%>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
      <th>Username</th>
      <th>Creation date</th>
      <th>Creation time</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id         %></td>
        <td><%= post.title      %></td>
        <td><%= post.body       %></td>
        <td><%= User.find(post.user_id).name %></td>
        <td><%= post.created_at.strftime("%k:%M")  %></td>
        <td><%= post.created_at.strftime("%d|%m|%Y") %></td>
        <td>
          <%= button_to 'Show post', post_path(post), method: :get  %>
        </td>
        <% if post.user_id == current_user.id %>
          <td>
            <%= button_to 'Edit post', edit_post_path(post), method: :get %>
          </td>
          <td>
            <%= button_to 'Destroy', destroy_post_path(post), method: :delete %>
          </td>
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
