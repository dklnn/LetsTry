<h1>All the posts: </h1>
<%= link_to 'New post', new_post_path %>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
            <th>Created at</th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.id         %></td>
                <td><%= post.title      %></td>
                <td><%= post.body       %></td>
                <td><%= post.created_at %></td>
                <td>
                <%= link_to 'Show post', post_path(post) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>